{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es6", "dom"],
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "./types"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
